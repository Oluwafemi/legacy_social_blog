<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
  <%= render 'fields', :f => f %>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<div>
  <%= gravatar_for @user %>
  <% text = "http://gravatar.com/emails" %>
  <%= auto_link(text, :html => {:target => "_blank"}) do |txt| %>
    <% "change" %>
  <% end %>
</div>

